---
import { Image } from 'astro:assets';
import myLogo from '/assets/sf-sec_logo+text_transp.png'; // Adjust path as needed
---

<a href="/" class="logo-link">
  <Image src={myLogo} alt="Sf-Sec Logo" class="odyssey-logo" />
</a>

<style>
  .odyssey-logo {
    /* Set dimensions that match your design */
    height: 3rem; 
    width: auto;
    display: block;
  }

  .logo-link:hover .odyssey-logo {
    filter: brightness(1.2); /* A nice 'glow' effect on hover */
    cursor: pointer;
  }
</style>